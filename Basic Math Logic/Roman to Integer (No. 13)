class Solution {
    public int romanToInt(String s) {
        int sum = 0;
        int n = s.length();
        
        for(int i = 1 ; i< n; i++)
        {                
            if(change(s.charAt(i)) <= change(s.charAt(i-1)))
            {
                sum += change(s.charAt(i-1));
            }
            else
            {
                sum -= change(s.charAt(i-1));
            }
        }
        sum += change(s.charAt(n-1));
        return sum;

    }
    private int change(char s)
        {
            
            switch(s)
            {
                case 'I':
                return 1;
                case 'V':
                return 5;
                case 'X':
                return 10;
                case 'L':
                return 50;
                case 'C':
                return 100;
                case 'D':
                return 500;
                case 'M':
                return 1000;
                default:
                return 0;
            }
        }
}
